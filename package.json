{
  "name": "drizzle-pg-audit-table",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "format": "bunx @biomejs/biome format --write ./src",
    "lint": "bunx @biomejs/biome lint ./src",
    "check": "bunx @biomejs/biome check --apply ./src",
    "ci": "bunx @biomejs/biome ci ./src",
    "db:generate": "drizzle-kit generate:pg",
    "start": "bun run src/index.ts",
    "db:docker:up": "docker-compose -f postgres/postgres.yml up -d",
    "db:docker:down": "docker-compose -f postgres/postgres.yml down",
    "db:docker:logs": "docker-compose -f postgres/postgres.yml logs -t -f",
    "db:docker:remove": "docker-compose -f postgres/postgres.yml rm -f"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.20.10",
    "@biomejs/biome": "^1.5.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anatine/zod-mock": "^3.13.3",
    "@faker-js/faker": "^8.3.1",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  }
}
